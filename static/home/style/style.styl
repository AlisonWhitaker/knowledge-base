@import "nib";

grayLight = #ededed
grayMedium = #8a8a8a
grayDark = #222

footerHeight = 15rem

*
  box-sizing: border-box;
  
body
  background linear-gradient(top, white, #efefef)
  min-height 100vh
  margin 0
  font-family Roboto, Helvetica, Arial, sans-serif 
  +above('s')
    padding-bottom: footerHeight
  position: relative;
  
h1
h2
  font-family Roboto Condensed, Helvetica, Arial, sans-serif
  color #fff
  

.cover
  height 23em
  max-height 90vh
  width 100%
  background #000 url('../img/composers.jpg') 0 -40px no-repeat
  background-size cover
  position relative
  display flex
  flex-flow column
  align-items center
  justify-content center
  text-align center
  box-shadow inset 0 -3px 16px 0 #333
  +below('m')
    font-size .8em
  +below('s')
    font-size .5em
  h1
  h2
    font-family Roboto Condensed, Helvetica, Arial, sans-serif
    color #fff
    text-shadow 1px 1px 2px #333
    background alpha(#000, .5)

  h1
    display: block;
    margin 2em 1em 0
    padding .3em .5em 0
    font-size 4em 
    text-align left
    
    h2
      margin-top .7em

.link-blocks
  display flex
  flex-wrap wrap
  max-width: 100%
  margin: auto;
  width 60em
  a
    display block
    flex 1 10em
    text-align: center;
    padding 0 .4em
    background orange
    text-decoration: none
    margin: .6em
    color #fff
    font-size 1.4em
    height: 6em
    line-height: 6em
    &:nth-child(2)
      background #B63088
    &:nth-child(3)
      background #C62C24
    +below('m')
      font-size 1em
        
        
#appFooter
  margin-top: 2em
  +above('s')
    position: absolute;
  width: 100%
  left 0
  bottom 0
  box-sizing: border-box
  box-shadow inset 0 9px 16px -12px grayDark
  padding 4em 3em
  background darken(grayLight, 10)
  .footerCont
    margin auto
    max-width pageWidthLimit
    +above('m')
      display flex
      flex-flow space-between
    div
      flex 1 1
    .projLogoCont
      +below('m')
        width 7em
        max-width 100%
        margin 1em auto
      +above('m')
        border-left 1px solid grayMedium
        padding-left 1.3em
        margin-left 1.3em
        flex 0 1 9em
      a
        opacity .4
        display block
        text-decoration none
        width 100%
        height 100%
        transition opacity .3s materialBezier
        img
          max-width 100%
          max-height 100%
          filter saturate(0%)
          -webkit-filter saturate(0%)
          transition all .3s materialBezier

        &:hover
          opacity 1
          filter none
          img
            filter saturate(100%)
            -webkit-filter saturate(100%)
